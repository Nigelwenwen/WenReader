<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="chapter"
            type="com.nigel.wenreader.widget.page.TxtChapter"/>
        <variable
            name="color"
            type="Integer"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_category_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/catalog_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawableLeft="@drawable/selector_category_unload"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textColor="@color/selector_chapter"
            android:drawableTint="@color/selector_chapter"
            android:textSize="14sp"
            android:text="@{chapter.title}"
            tools:text="第一章     八十大寿"/>


        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/divider_narrow" />-->
    </LinearLayout>

</layout>
